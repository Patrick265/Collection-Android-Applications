<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDeep</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDeep2</item>
        <item name="colorAccent">@color/colorPrimaryDeep3</item>
    </style>

    <style name="FragmentText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/fira_sans_bold</item>
    </style>

    <style name="DetailedText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/fira_sans_bold</item>
    </style>

    <style name="DetailedTextWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/fira_sans_bold</item>
    </style>


</resources>
